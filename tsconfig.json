{
	"compilerOptions": {
		"target": "ESNEXT",
		"strict": true,
		"outDir": "build",
		"sourceMap": true,
		"noImplicitAny": true,
		"removeComments": true,
		"allowSyntheticDefaultImports": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "node",
		"module": "ESNEXT"
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
